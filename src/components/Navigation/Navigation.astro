<div id="backdrop" class="backdrop"></div>

<div class="nav-links" id="nav-links">
	<a href="/login" title="Go to the log in page">Log in</a>
	<a href="/register" title="Go to the register page">Register</a>
	<a href="/about" title="Go to the about page">About</a>
</div>
<style>
	.nav-links {
		display: flex;
		gap: 1rem;
	}

	.nav-links a {
		color: var(--color-secondary);
		text-decoration: none;
		transition: color 0.2s;
	}

	.nav-links a:hover {
		text-decoration: underline;
	}

	/* Hamburger button */
	.menu-toggle {
		font-size: 1.5rem;
		background: none;
		border: none;
		color: var(--color-secondary);
		cursor: pointer;
		display: none; /* hidden by default */
	}

	/* Mobile */
	@media (max-width: 768px) {
		.menu-toggle {
			display: block; /* show hamburger */
			width: 60px;
			padding: 0;
		}
		.backdrop {
			position: fixed;
			inset: 0;
			background: rgba(0, 0, 0, 0.4);
			backdrop-filter: blur(4px);
			opacity: 0;
			visibility: hidden; /* instead of display:none */
			transition:
				opacity 0.3s ease,
				visibility 0s linear 0.3s;
			z-index: 500;
			top: 80px;
		}

		.backdrop.open {
			opacity: 1;
			visibility: visible;
			transition: opacity 0.3s ease;
			top: 80px;
		}

		.nav-links {
			position: absolute;
			top: 59px;
			right: calc(var(--site-pad) * -1);
			width: 100vw;
			background: var(--color-secondary);
			flex-direction: column;
			gap: var(--space-lg);
			padding: var(--space-md);

			/* start hidden */
			max-height: 0;
			opacity: 0;
			overflow: hidden;

			transition:
				max-height 0.5s ease,
				opacity 0.01s ease;
			z-index: 1000; /* above backdrop */
		}

		.nav-links.open {
			max-height: 800px; /* pick a value tall enough for your links */
			opacity: 1;
		}

		.nav-links a {
			color: var(--color-primary);
			text-decoration: none;
		}
	}
</style>
<script>
	const toggleBtn = document.getElementById("menu-toggle");
	const navLinks = document.getElementById("nav-links");
	const backdrop = document.getElementById("backdrop");

	toggleBtn?.addEventListener("click", () => {
		navLinks?.classList.toggle("open");
		backdrop?.classList.toggle("open");
	});

	// close when clicking backdrop
	backdrop?.addEventListener("click", () => {
		navLinks?.classList.remove("open");
		backdrop?.classList.remove("open");
	});
</script>
