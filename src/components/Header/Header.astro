---
import { Image } from "astro:assets";
import Hamburger from "../Hamburger/Hamburger.astro";
import Navigation from "../Navigation/Navigation.astro";

import styles from "@components/Header/Header.module.css";
---

<header class={styles.mainHeader}>
	<div class={`container ${styles.headerInner}`}>
		<div class={styles.headerDiv}>
			<a href="/" title="Go to landing page" class={styles.logoLink}>
				<img src="/assets/slothmedia-logo.png" alt="Slothmedia logotype" />
			</a>
			<h1 class={styles.siteTitle}>
				<a href="/" title="Go to landing page">Slothmedia</a>
			</h1>
		</div>
		<nav aria-label="Main navigation">
			<Navigation />
		</nav>
	</div>
</header>
